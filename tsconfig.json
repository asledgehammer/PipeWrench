{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "types": [
      "@types/node"
    ]
  },
  "tstl": {
    "noHeader": true,
    "buildMode": "library"
  },
  "include": [
    "./java",
    "./lua",
    ".PipeWrench.d.ts",
    ".reference.d.ts"
  ],
  "exclude": [
    "java.api.partial.d.ts",
    "java.reference.partial.d.ts",
    "lua.api.partial.d.ts",
    "lua.reference.partial.d.ts"
  ]
}